<?xml version="1.0" encoding="utf-8"?>
<mx:Canvas xmlns:mx="http://www.adobe.com/2006/mxml">
	<mx:Form x="0" y="0">
		<mx:FormItem label="Algemene toestand">
			<mx:Grid x="10" y="10">
				<mx:GridRow width="100%" height="100%">
					<mx:GridItem width="100%" height="100%">
						<mx:Label/>
					</mx:GridItem>
					<mx:GridItem width="100%" height="100%" horizontalAlign="center">
						<mx:Label text="10m" fontWeight="bold"/>
					</mx:GridItem>
					<mx:GridItem width="100%" height="100%" horizontalAlign="center">
						<mx:Label text="100m" fontWeight="bold"/>
					</mx:GridItem>
				</mx:GridRow>
				<mx:GridRow width="100%" height="100%">
					<mx:GridItem width="100%" height="100%">
						<mx:Label text="Niet bekeken"/>
					</mx:GridItem>
					<mx:GridItem width="100%" height="100%" horizontalAlign="center">
						<mx:CheckBox id="cb_nb_10m"/>
					</mx:GridItem>
					<mx:GridItem width="100%" height="100%" horizontalAlign="center">
						<mx:CheckBox id="cb_nb_100m"/>
					</mx:GridItem>
				</mx:GridRow>
				<mx:GridRow width="100%" height="100%">
					<mx:GridItem width="100%" height="100%">
						<mx:Label text="Bos"/>
					</mx:GridItem>
					<mx:GridItem width="100%" height="100%">
						<mx:TextInput width="64" enabled="{!cb_nb_10m.selected}"/>
					</mx:GridItem>
					<mx:GridItem width="100%" height="100%">
						<mx:TextInput width="64" enabled="{!cb_nb_100m.selected}"/>
					</mx:GridItem>
				</mx:GridRow>
				<mx:GridRow width="100%" height="100%">
					<mx:GridItem width="100%" height="100%">
						<mx:Label text="Bebouwing"/>
					</mx:GridItem>
					<mx:GridItem width="100%" height="100%">
						<mx:TextInput width="64" enabled="{!cb_nb_10m.selected}"/>
					</mx:GridItem>
					<mx:GridItem width="100%" height="100%">
						<mx:TextInput width="64" enabled="{!cb_nb_100m.selected}"/>
					</mx:GridItem>
				</mx:GridRow>
				<mx:GridRow width="100%" height="100%">
					<mx:GridItem width="100%" height="100%">
						<mx:Label text="Weiland"/>
					</mx:GridItem>
					<mx:GridItem width="100%" height="100%">
						<mx:TextInput width="64" enabled="{!cb_nb_10m.selected}"/>
					</mx:GridItem>
					<mx:GridItem width="100%" height="100%">
						<mx:TextInput width="64" enabled="{!cb_nb_100m.selected}"/>
					</mx:GridItem>
				</mx:GridRow>
				<mx:GridRow width="100%" height="100%">
					<mx:GridItem width="100%" height="100%">
						<mx:Label text="Park"/>
					</mx:GridItem>
					<mx:GridItem width="100%" height="100%">
						<mx:TextInput width="64" enabled="{!cb_nb_10m.selected}"/>
					</mx:GridItem>
					<mx:GridItem width="100%" height="100%">
						<mx:TextInput width="64" enabled="{!cb_nb_100m.selected}"/>
					</mx:GridItem>
				</mx:GridRow>
				<mx:GridRow width="100%" height="100%">
					<mx:GridItem width="100%" height="100%">
						<mx:Label text="Akker"/>
					</mx:GridItem>
					<mx:GridItem width="100%" height="100%">
						<mx:TextInput width="64" enabled="{!cb_nb_10m.selected}"/>
					</mx:GridItem>
					<mx:GridItem width="100%" height="100%">
						<mx:TextInput width="64" enabled="{!cb_nb_100m.selected}"/>
					</mx:GridItem>
				</mx:GridRow>
				<mx:GridRow width="100%" height="100%">
					<mx:GridItem width="100%" height="100%">
						<mx:Label text="Water"/>
					</mx:GridItem>
					<mx:GridItem width="100%" height="100%">
						<mx:TextInput width="64" enabled="{!cb_nb_10m.selected}"/>
					</mx:GridItem>
					<mx:GridItem width="100%" height="100%">
						<mx:TextInput width="64" enabled="{!cb_nb_100m.selected}"/>
					</mx:GridItem>
				</mx:GridRow>
				<mx:GridRow width="100%" height="100%">
					<mx:GridItem width="100%" height="100%">
						<mx:Label text="Totaal"/>
					</mx:GridItem>
					<mx:GridItem width="100%" height="100%">
						<mx:Text width="64" enabled="{!cb_nb_10m.selected}"/>
					</mx:GridItem>
					<mx:GridItem width="100%" height="100%">
						<mx:Text width="64" enabled="{!cb_nb_100m.selected}"/>
					</mx:GridItem>
				</mx:GridRow>
			</mx:Grid>
		</mx:FormItem>
		<mx:FormItem label="Ligging">
			<mx:ComboBox>
				<mx:dataProvider>
					<mx:ArrayCollection>
						<mx:Object label="Niet bekeken" />
						<mx:Object label="Geheel ondergronds" />
						<mx:Object label="Gedeeltelijk ondergronds" />
					</mx:ArrayCollection>
				</mx:dataProvider>
			</mx:ComboBox>
		</mx:FormItem>
		<mx:FormItem label="Expositie">
			<mx:ComboBox>
				<mx:dataProvider>
					<mx:ArrayCollection>
						<mx:Object label="Niet bekeken" />
						<mx:Object label="Volledig beschaduwd" />
						<mx:Object label="Half beschaduwd" />
						<mx:Object label="In volle zon" />
					</mx:ArrayCollection>
				</mx:dataProvider>
			</mx:ComboBox>
		</mx:FormItem>
		<mx:FormItem label="Relief">
			<mx:ComboBox>
				<mx:dataProvider>
					<mx:ArrayCollection>
						<mx:Object label="Niet bekeken" />
						<mx:Object label="Vlak" />
						<mx:Object label="Hellend" />
					</mx:ArrayCollection>
				</mx:dataProvider>
			</mx:ComboBox>
		</mx:FormItem>
		<mx:FormItem label="Afstand berijdbare weg">
			<mx:HBox>
				<mx:TextInput width="64" enabled="{!nb_afstandTotBerijdbareWeg.selected}"/>
				<mx:Label text="meter" />
			</mx:HBox>
			<mx:CheckBox id="nb_afstandTotBerijdbareWeg" label="Niet bekeken"/>
		</mx:FormItem>
		<mx:FormItem label="Recreatieve ontsluiting">
			<mx:ComboBox id="cb_recreatieveOntsluiting">
				<mx:dataProvider>
					<mx:ArrayCollection>
						<mx:Object label="Niet bekeken" />
						<mx:Object label="Ligt langs trage weg" />
						<mx:Object label="Fietspad" />
						<mx:Object label="Nuttig om informatiebord te plaatsen?" />
						<mx:Object label="Andere" />
					</mx:ArrayCollection>
				</mx:dataProvider>
			</mx:ComboBox>
			<mx:TextInput enabled="{cb_recreatieveOntsluiting.selectedItem.label == 'Andere'}"/>
		</mx:FormItem>
	</mx:Form>
</mx:Canvas>
