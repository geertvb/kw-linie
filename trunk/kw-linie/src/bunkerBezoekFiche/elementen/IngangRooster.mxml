<?xml version="1.0" encoding="utf-8"?>
<mx:Canvas xmlns:mx="http://www.adobe.com/2006/mxml">

	<mx:Script>
		<![CDATA[
			import util.BindingUtils;
			
			public function bind(vo: Object) : void {
				vo.rooster_ingang_niet_bekeken = BindingUtils.checkboxToBoolean(cb_niet_bekeken);
				vo.rooster_ingang_aanwezig = BindingUtils.checkboxToBoolean(cb_aanwezig);
				vo.rooster_ingang_opmerkingen = BindingUtils.textAreaToString(ta_rooster_ingang_opmerkingen);
			}
		]]>
	</mx:Script>

	<mx:Form x="0" y="0"
			paddingBottom="0"
			paddingLeft="0"
			paddingRight="0"
			paddingTop="0">
			
		<mx:FormItem label="Niet bekeken">
			<mx:CheckBox
				id="cb_niet_bekeken"
				selected="{data.rooster_ingang_niet_bekeken}"/>
		</mx:FormItem>

		<mx:FormItem label="Aanwezig">
			<mx:CheckBox
				id="cb_aanwezig"
				selected="{data.rooster_ingang_aanwezig}"/>
		</mx:FormItem>

		<mx:FormItem label="Opmerkingen">
			<mx:TextArea 
				id="ta_rooster_ingang_opmerkingen"
				text="{data.rooster_ingang_opmerkingen}"
				width="320"/>
		</mx:FormItem>

	</mx:Form>

</mx:Canvas>
